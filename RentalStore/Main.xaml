<Page x:Class="RentalStore.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentalStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Main" Loaded="Page_Loaded">
    <Page.Resources>
        <DataTemplate x:Key="customersTemplate">
            <TextBlock Text="{Binding Path=Firstname}"></TextBlock>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListBox x:Name="lbxCustomers" ItemTemplate="{StaticResource customersTemplate}" HorizontalAlignment="Left" Height="308" Margin="66,63,0,0" VerticalAlignment="Top" Width="297" SelectionChanged="LbxCustomers_SelectionChanged"/>
        <Button x:Name="btnViewProfile" Content="View Profile" HorizontalAlignment="Left" Margin="470,385,0,0" VerticalAlignment="Top" Width="171" Click="btn_Click" Height="55"/>
        <Button x:Name="btnCreateLoan" Content="Create Loan" HorizontalAlignment="Left" Margin="269,385,0,0" VerticalAlignment="Top" Width="171" Click="btn_Click" Height="55"/>
        <Button x:Name="btnViewStock" Content="View Stock" HorizontalAlignment="Left" Margin="66,385,0,0" VerticalAlignment="Top" Width="171" Height="55" Click="btnViewStock_Click"/>

    </Grid>
</Page>
