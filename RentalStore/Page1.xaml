<Page x:Class="RentalStore.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentalStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Page1">
    <Page.Resources>
        <DataTemplate x:Key="receiptTemplate">
            <TextBlock Text="{Binding Path=ReturnDate}"></TextBlock>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListBox x:Name="lbxLoans" ItemTemplate="{StaticResource receiptTemplate}" HorizontalAlignment="Left" Height="140" Margin="70,147,0,0" VerticalAlignment="Top" Width="691"/>
        <TextBlock HorizontalAlignment="Left" Margin="686,335,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="75" Height="22"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="686,378,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="70,378,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock HorizontalAlignment="Left" Margin="70,39,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="691" Height="73"/>

    </Grid>
</Page>
