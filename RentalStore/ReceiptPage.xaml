<Page x:Class="RentalStore.ReceiptPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentalStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="ReceiptPage" Loaded="Page_Loaded">
    <Grid>
        <Button x:Name="btnAddAnother" Content="Add another" HorizontalAlignment="Left" Margin="94,365,0,0" VerticalAlignment="Top" Width="75" Click="BtnAddAnother_Click"/>
        <Button x:Name="btnFinish" Content="Finish" HorizontalAlignment="Left" Margin="651,365,0,0" VerticalAlignment="Top" Width="75" Click="BtnFinish_Click"/>
        <ListBox x:Name="lbxLoans" HorizontalAlignment="Left" Height="230" Margin="94,77,0,0" VerticalAlignment="Top" Width="632"/>
        <TextBlock x:Name="tblkTotal" HorizontalAlignment="Left" Margin="651,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75" Height="48" FontSize="16"/>
        <Label Content="Movies Loaned" HorizontalAlignment="Left" Margin="94,22,0,0" VerticalAlignment="Top" Width="145" Height="34" FontSize="20"/>
    </Grid>
</Page>
