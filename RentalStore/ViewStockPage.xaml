<Page x:Class="RentalStore.ViewStockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RentalStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="ViewStockPage">
    <Page.Resources>
        <DataTemplate x:Key="moviesTemplate">
            <TextBlock Text="{Binding Path=Title}"></TextBlock>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ListBox x:Name="lbxInStock" ItemTemplate="{StaticResource moviesTemplate}" HorizontalAlignment="Left" Height="308" Margin="147,55,0,0" VerticalAlignment="Top" Width="200"/>
        <ListBox x:Name="lbxOutOfStock" ItemTemplate="{StaticResource moviesTemplate}" HorizontalAlignment="Left" Height="308" Margin="529,55,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Page>
